{
  "name": "subsc-manager",
  "version": "1.0.0",
  "description": "サブスクリプション管理アプリ - Netflix、Spotify、Amazon Primeなど、すべてのサブスクリプションを一元管理",
  "keywords": [
    "サブスクリプション",
    "管理",
    "Netflix",
    "Spotify",
    "Amazon Prime",
    "家計管理",
    "支払い管理",
    "Next.js",
    "React",
    "TypeScript",
    "Supabase"
  ],
  "author": "SubscManager Team",
  "license": "MIT",
  "homepage": "https://subsc-manager.vercel.app",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/subsc-manager.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/subsc-manager/issues"
  },
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "prisma generate && next build",
    "start": "next start",
    "lint": "next lint",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "db:seed": "npx prisma db seed",
    "db:generate": "npx prisma generate",
    "db:push": "npx prisma db push",
    "db:migrate": "npx prisma migrate deploy",
    "migrate:to-supabase": "tsx scripts/migrate-to-supabase.ts"
  },
  "dependencies": {
    "@prisma/client": "^6.13.0",
    "@prisma/extension-accelerate": "^2.0.2",
    "@supabase/supabase-js": "^2.54.0",
    "@types/jsonwebtoken": "^9.0.10",
    "dotenv": "^17.2.1",
    "jsonwebtoken": "^9.0.2",
    "next": "15.4.6",
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.4.6",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.0.5",
    "prettier": "^3.6.2",
    "prisma": "^6.13.0",
    "tailwindcss": "^4",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.3",
    "typescript": "^5"
  }
}
